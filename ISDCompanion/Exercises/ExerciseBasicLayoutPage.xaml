    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:Class="ISDCompanion.ExerciseBasicLayoutPage"
    xmlns:fontAwesome="clr-namespace:FontAwesome"
    Title="{xct:Translate ExerciseBasicLayout}"
    >

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem2" Order="Secondary" Text="Item 1" Priority="2" />
